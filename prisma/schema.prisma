// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  firstname    String?
  lastname     String?
  email        String?  @unique
  partner      Boolean? @default(false)
  money        Float?
  photo        String?
  address      String?  @default("Endere√ßo Indefinido")
  restaurantId String?  @default("")
}

model Restaurant {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  ownerId        String?
  email          String? @unique
  cellphone      String?
  ownerName      String?
  ownerLastname  String?
  cpf            String?
  rg             String?
  orgaoEmissor   String?
  cnpj           String?
  restaurantName String?
  telephone      String?
  street         String?
  city           String?
  state          String?
  address        Int?
  speciality     String?
  delivery       String?
  stars          Float?  @default(3)
  logo           String? @default("/assets/logo.png")
  background     String? @default("https://www.ifood.com.br/static/images/merchant/banner/DEFAULT.png")
  deliveryTime   String? @default("30min - 35min")
  deliveryValue  Float?  @default(5)
  minValue       Float?  @default(5)
}

model Address {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  user    String?
  state   String?
  city    String?
  street  String?
  address Int?
}

model Category {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  restaurant          String?
  categoryName        String?
  categoryDescription String?
  quantityItems       Int?    @default(0)
}

model Product {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  restaurant         String?
  category           String?
  productName        String?
  productDescription String?
  productValue       Float?
  productFoto        String?
  sales              Int? @default(0)
  totalSaleValue     Float? @default(0)
}

model Purchase {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  user            String?
  restaurant      String?
  products        String?
  quantity        Int?     @default(1)
  totalValue      Float?
  commentaries    String?
  paymentMethod   String?
  takeOption      String?
  deliveryAddress String?
  deliveryPlace   String?
  restaurantLogo  String?
  restaurantName  String?
  deliveryTime    String?
  deliveryValue   Float?
  delivered       Boolean? @default(false)
}
